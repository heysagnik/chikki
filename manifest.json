{
  "manifest_version": 3,
  "name": "Chikki â€“ Writing Assistant",
  "version": "0.1.0",
  "description": "Chikki enhances your writing with AI-powered suggestions and improvements.",
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/background.bundle.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/bundle.js"],
      "css": ["content/content-style.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content/content-style.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "ui/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  }
}